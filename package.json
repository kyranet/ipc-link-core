{
		"name": "veza",
		"version": "1.1.0",
		"description": "IPC/TCP Networking Utility to connect several processes with great speeds.",
		"main": "dist/index.js",
		"types": "dist/index.d.ts",
				"scripts": {
				"build": "tsc -b src",
				"build:examples": "tsc -b examples",
				"clean": "tsc -b src --clean",
				"commit": "git-cz",
				"cz": "git-cz",
				"docs": "typedoc --excludeNotExported --exclude ./src/utils/**/*.ts --mode file --out ./dist/ ./src/",
				"format": "prettier --write {src,test,examples}/**/*.ts",
				"format:check": "prettier --check {src,test,examples}/**/*.ts",
				"lint": "eslint --fix src test examples --ext ts",
				"prepublishOnly": "yarn build",
				"sversion": "standard-version",
				"test": "jest",
				"test:watch": "jest --watch",
				"update": "yarn upgrade-interactive --latest",
				"watch": "tsc -b src -w"
		},
		"repository": {
				"type": "git",
				"url": "git@github.com:kyranet/veza.git"
		},
		"keywords": [
				"ipc",
				"tcp",
				"socket",
				"veza",
				"node-ipc"
		],
		"author": "kyranet <kyradiscord@gmail.com>",
		"license": "MIT",
		"bugs": {
				"url": "https://github.com/kyranet/veza/issues"
		},
		"homepage": "https://veza.js.org",
		"dependencies": {
				"binarytf": "^2.0.0"
		},
		"devDependencies": {
				"@commitlint/cli": "^9.1.1",
				"@commitlint/config-conventional": "^9.1.1",
				"@skyra/eslint-config": "^5.3.1",
				"@types/jest": "^26.0.10",
				"@types/node": "^14.0.27",
				"@typescript-eslint/eslint-plugin": "^3.9.0",
				"@typescript-eslint/parser": "^3.9.0",
				"cz-conventional-changelog": "^3.2.0",
				"eslint": "^7.7.0",
				"eslint-config-prettier": "^6.11.0",
				"eslint-plugin-prettier": "^3.1.4",
				"husky": "^4.2.5",
				"jest": "^26.4.2",
				"jest-circus": "^26.4.2",
				"lint-staged": "^10.2.11",
				"prettier": "^2.0.5",
				"standard-version": "^8.0.2",
				"ts-jest": "^26.2.0",
				"ts-node": "^8.10.2",
				"typedoc": "^0.17.8",
				"typescript": "^4.0.2"
		},
		"engines": {
				"node": ">=12",
				"npm": ">=6"
		},
		"husky": {
				"hooks": {
						"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
						"pre-commit": "yarn lint-staged"
				}
		},
		"commitlint": {
				"extends": [
						"@commitlint/config-conventional"
				]
		},
		"lint-staged": {
				"*.{mjs,js,ts}": "eslint --fix --ext ts"
		},
		"config": {
				"commitizen": {
						"path": "./node_modules/cz-conventional-changelog"
				}
		},
		"publishConfig": {
				"access": "public"
		},
		"resolutions": {
				"acorn": "^7.3.1",
				"apollo-codegen": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
				"chalk": "^4.1.0",
				"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
				"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
				"kind-of": "^6.0.3",
				"lodash": "^4.17.20",
				"minimist": "^1.2.2"
		}
}
